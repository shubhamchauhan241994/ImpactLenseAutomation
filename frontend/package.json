{
  "name": "impactlens-frontend",
  "version": "1.0.0",
  "description": "AI-Driven Jira Impact Analysis Tool Frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ai": "vitest run --reporter=verbose src/test/framework/AITestFramework.ts",
    "test:e2e": "playwright test",
    "test:cypress": "cypress run",
    "test:all": "npm run test:ai && npm run test:e2e && npm run test:cypress"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.20.1",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "typescript": "5.3.3",
    "tailwindcss": "3.4.0",
    "autoprefixer": "10.4.16",
    "postcss": "8.4.32",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "lucide-react": "0.303.0",
    "tailwind-merge": "2.2.0",
    "@tanstack/react-query": "5.17.9",
    "react-hook-form": "7.48.2",
    "@hookform/resolvers": "3.3.4",
    "zod": "3.22.4",
    "zustand": "4.4.7",
    "axios": "1.6.2",
    "react-hot-toast": "2.4.1",
    "framer-motion": "10.16.16",
    "recharts": "2.8.0",
    "date-fns": "2.30.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9",
    "vite": "^5.0.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.8",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.3",
    "@axe-core/react": "^4.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
